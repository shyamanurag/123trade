# ================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Elite Trading System - Complete Configuration
# ================================

# ===============================
# DATABASE CONFIGURATION
# ===============================
# PostgreSQL Database Settings (DigitalOcean Database)
DATABASE_HOST=your-postgres-host.db.ondigitalocean.com
DATABASE_PORT=25060
DATABASE_NAME=defaultdb
DATABASE_USER=doadmin
DATABASE_PASSWORD=your-database-password
DATABASE_URL=postgresql://doadmin:your-database-password@your-postgres-host.db.ondigitalocean.com:25060/defaultdb?sslmode=require

# Database Pool Settings
DB_MIN_CONNECTIONS=10
DB_MAX_CONNECTIONS=50
DB_COMMAND_TIMEOUT=30

# ===============================
# REDIS CONFIGURATION  
# ===============================
# Redis Cache Settings (DigitalOcean Redis)
REDIS_URL=rediss://default:your-redis-password@your-redis-host.db.ondigitalocean.com:25061

# ===============================
# SECURITY CONFIGURATION
# ===============================
# JWT Token Settings
SECRET_KEY=your-super-secret-jwt-key-256-chars-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Security
API_RATE_LIMIT=1000
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# ===============================
# TRADING BROKER CREDENTIALS
# ===============================
# Zerodha KiteConnect API
ZERODHA_API_KEY=your-zerodha-api-key
ZERODHA_API_SECRET=your-zerodha-api-secret
ZERODHA_USER_ID=your-zerodha-user-id
ZERODHA_PASSWORD=your-zerodha-password
ZERODHA_PIN=your-zerodha-pin

# ===============================
# MARKET DATA PROVIDERS
# ===============================
# TrueData API Credentials
TRUEDATA_LOGIN_ID=your-truedata-login
TRUEDATA_PASSWORD=your-truedata-password
TRUEDATA_API_KEY=your-truedata-api-key

# ===============================
# N8N INTEGRATION
# ===============================
# n8n Workflow Automation
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/trading
N8N_API_KEY=your-n8n-api-key
N8N_WEBHOOK_SECRET=your-n8n-webhook-secret

# ===============================
# TRADING CONFIGURATION
# ===============================
# Trading Mode
PAPER_TRADING=false
LIVE_TRADING=true

# Risk Management
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=5000
RISK_PER_TRADE=0.02

# Strategy Configuration
ACTIVE_STRATEGIES=["momentum","mean_reversion","breakout","pairs_trading","arbitrage"]
MAX_CONCURRENT_TRADES=10

# ===============================
# NOTIFICATION SETTINGS
# ===============================
# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===============================
# MONITORING & LOGGING
# ===============================
# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_URL=https://your-grafana-instance.com
ALERT_WEBHOOK_URL=https://your-alert-webhook.com

# ===============================
# EXTERNAL INTEGRATIONS
# ===============================
# Backup Storage
BACKUP_S3_BUCKET=your-trading-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# ===============================
# DEPLOYMENT CONFIGURATION
# ===============================
# Server Settings
PORT=8000
HOST=0.0.0.0
WORKERS=4

# Frontend Settings
FRONTEND_URL=https://yourdomain.com
API_BASE_URL=https://api.yourdomain.com

# SSL/TLS
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# ===============================
# REGULATORY COMPLIANCE
# ===============================
# SEBI Compliance
SEBI_REGISTRATION_NUMBER=your-sebi-registration
COMPLIANCE_ENABLED=true
AUDIT_LOGGING=true

# Data Retention
DATA_RETENTION_DAYS=2555  # 7 years
BACKUP_RETENTION_DAYS=90 