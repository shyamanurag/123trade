# DigitalOcean Production Environment Variables Template
# Copy this file to production.env and replace with your actual values

# Database Configuration (PostgreSQL)
DATABASE_HOST=your-db-host.db.ondigitalocean.com
DATABASE_PORT=25060
DATABASE_NAME=defaultdb
DATABASE_USER=doadmin
DATABASE_PASSWORD=your-database-password
DATABASE_SSL=require

# Redis Configuration
REDIS_HOST=your-redis-host.db.ondigitalocean.com
REDIS_PORT=25061
REDIS_PASSWORD=your-redis-password
REDIS_USERNAME=default
REDIS_SSL=true

# Build Redis URL for easy connection
REDIS_URL=rediss://default:your-redis-password@your-redis-host.db.ondigitalocean.com:25061

# Database URL for connection pooling
DATABASE_URL=postgresql://doadmin:your-database-password@your-db-host.db.ondigitalocean.com:25060/defaultdb?sslmode=require

# Application Configuration
JWT_SECRET=your-production-jwt-secret-key-change-this
APP_PORT=8000
NODE_ENV=production
ENVIRONMENT=production

# Security Configuration
ENABLE_CORS=true
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
BACKUP_ENABLED=true

# Zerodha API Configuration
ZERODHA_CLIENT_ID=your-client-id
ZERODHA_API_KEY=your-api-key
ZERODHA_API_SECRET=your-api-secret

# TrueData Configuration
TRUEDATA_USERNAME=your-truedata-username
TRUEDATA_PASSWORD=your-truedata-password
TRUEDATA_PORT=8086
TRUEDATA_URL=push.truedata.in
TRUEDATA_SANDBOX=false

# Trading Configuration
PAPER_TRADING=false

# Emergency Contacts
EMERGENCY_PHONE_NUMBER=+91-your-emergency-number
SUPPORT_EMAIL=support@your-domain.com 