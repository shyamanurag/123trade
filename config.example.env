# Trading System Environment Configuration
# Copy this file to .env and modify the values as needed

# Environment
ENVIRONMENT=development
DEBUG=true

# Security Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database Configuration (for future use)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=trading_system
DATABASE_USER=trading_user
DATABASE_PASSWORD=development_password

# Redis Configuration (for future use)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=text

# Trading Configuration
MAX_DAILY_TRADES=100
DEFAULT_STOP_LOSS_PERCENT=2.0
RISK_PER_TRADE_PERCENT=1.0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
MAX_CONNECTIONS=1000

# Monitoring
PROMETHEUS_ENABLED=false
HEALTH_CHECK_INTERVAL=30

# Development Flags
ENABLE_CORS=true
ENABLE_DOCS=true 