# =============================================================================
# ENHANCED CRYPTO TRADING SYSTEM ENVIRONMENT CONFIGURATION
# Production-ready configuration template with comprehensive options
# =============================================================================

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=production
TRADING_MODE=free-tier
DEPLOYMENT_MODE=production
VERSION=4.0.1
BUILD_DATE=

# Debug and Logging
DEBUG=false
API_DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long-change-this-immediately
ENCRYPTION_KEY=your-super-secure-encryption-key-32chars-change-this-now
SECRET_KEY=your-super-secure-secret-key-for-sessions-change-this-immediately

# Password Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# API Security
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
TRUSTED_HOSTS=["localhost","127.0.0.1"]
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Primary Database
DATABASE_URL=postgresql+asyncpg://trading_user:secure_password@localhost:5432/trading_db
POSTGRES_PASSWORD=secure_password_change_this
POSTGRES_PORT=5432
POSTGRES_HOST=localhost
POSTGRES_DB=trading_system
POSTGRES_USER=postgres

# TimescaleDB for Time-Series Data
TIMESCALE_DB_URL=postgresql+asyncpg://postgres:secure_password@localhost:5433/timescale_trading
TIMESCALE_PORT=5433
TIMESCALE_HOST=localhost
TIMESCALE_DB=timescale_trading
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=secure_password_change_this

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://:secure_redis_password@localhost:6379/0
REDIS_PASSWORD=secure_redis_password_change_this
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECTION_TIMEOUT=10

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Trading Mode Settings
PAPER_TRADING=true
LIVE_TRADING=false
MAX_DAILY_TRADES=50
MAX_ORDER_VALUE=10000
RISK_PER_TRADE_PERCENT=1.0
DEFAULT_STOP_LOSS_PERCENT=2.0
DEFAULT_TAKE_PROFIT_PERCENT=4.0

# Position Management
MAX_OPEN_POSITIONS=10
MAX_POSITION_SIZE=5000
MIN_ORDER_SIZE=10
POSITION_TIMEOUT=3600

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================
# Binance API
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true
BINANCE_TIMEOUT=30
BINANCE_RATE_LIMIT=1200

# Other Exchange APIs (Optional)
COINBASE_API_KEY=
COINBASE_SECRET_KEY=
COINBASE_PASSPHRASE=

KRAKEN_API_KEY=
KRAKEN_SECRET_KEY=

# Market Data APIs
ALPHA_VANTAGE_API_KEY=
POLYGON_API_KEY=
TWELVE_DATA_API_KEY=

# News and Social APIs
NEWS_API_KEY=
TWITTER_BEARER_TOKEN=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================
# Prometheus Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9001
METRICS_ENABLED=true
METRICS_PREFIX=trading_system
METRICS_INTERVAL=60

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
DEPENDENCY_CHECK_TIMEOUT=5

# Performance Monitoring
PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000
REQUEST_TIMEOUT=30

# =============================================================================
# DOCKER AND ORCHESTRATION
# =============================================================================
# Port Configuration
APP_PORT=8000
HTTP_PORT=80
HTTPS_PORT=443
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601
LOGSTASH_PORT=5044

# Resource Limits
APP_CPU_LIMIT=2.0
APP_MEMORY_LIMIT=4G
DB_CPU_LIMIT=1.0
DB_MEMORY_LIMIT=2G

# Data Directories
DATA_DIR=./data
BACKUP_DIR=./backups
LOG_DIR=./logs
CONFIG_DIR=./config

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# Slack Notifications
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#trading-alerts

# Discord Notifications
DISCORD_WEBHOOK_URL=

# Telegram Notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================
GRAFANA_ADMIN_PASSWORD=secure_grafana_password_change_this
GRAFANA_SECRET_KEY=secure_grafana_secret_change_this
GRAFANA_SECURE_COOKIES=false
GRAFANA_ROOT_URL=http://localhost:3000
GRAFANA_ALLOW_EMBEDDING=true

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/trading.crt
SSL_KEY_PATH=/etc/ssl/private/trading.key
SSL_VERIFY=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_AUTONOMOUS_TRADING=true
FEATURE_MARKET_ANALYSIS=true
FEATURE_SOCIAL_SENTIMENT=true
FEATURE_NEWS_ANALYSIS=true
FEATURE_BACKTESTING=true
FEATURE_PAPER_TRADING=true
FEATURE_LIVE_TRADING=false
FEATURE_API_DOCS=true
FEATURE_ADMIN_PANEL=true

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# Queue Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=4

# Machine Learning
ML_MODEL_PATH=./models
ML_RETRAIN_INTERVAL=86400
ML_FEATURE_CACHE_SIZE=10000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Only for development environment
DEV_RELOAD=false
DEV_DEBUG_TOOLBAR=false
DEV_PROFILE=false
DEV_MOCK_EXTERNAL_APIS=false

# Testing
TEST_DATABASE_URL=sqlite:///test.db
TEST_REDIS_URL=redis://localhost:6379/15
TEST_PARALLEL=true
TEST_COVERAGE=true

# =============================================================================
# TIMEZONE AND LOCALIZATION
# =============================================================================
TZ=UTC
TIMEZONE=UTC
LOCALE=en_US.UTF-8
DATE_FORMAT=%Y-%m-%d
TIME_FORMAT=%H:%M:%S
DATETIME_FORMAT=%Y-%m-%d %H:%M:%S