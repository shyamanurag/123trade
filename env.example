# Trading System Environment Variables
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=production
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
DATABASE_HOST=your-database-host
DATABASE_PORT=25060
DATABASE_NAME=db
DATABASE_USER=db
DATABASE_PASSWORD=your-secure-password-here

# Redis Configuration
REDIS_URL=rediss://default:password@host:port
REDIS_HOST=your-redis-host
REDIS_PORT=25061
REDIS_PASSWORD=your-redis-password-here
REDIS_SSL=true

# Security Keys (Generate new ones!)
JWT_SECRET=generate-a-secure-jwt-secret-key
ENCRYPTION_KEY=generate-a-secure-encryption-key
WEBHOOK_SECRET=generate-a-secure-webhook-secret

# Zerodha Configuration
ZERODHA_CLIENT_ID=your-client-id
ZERODHA_API_KEY=your-api-key
ZERODHA_API_SECRET=your-api-secret

# TrueData Configuration
TRUEDATA_USERNAME=your-username
TRUEDATA_PASSWORD=your-password
TRUEDATA_PORT=8086
TRUEDATA_URL=push.truedata.in
TRUEDATA_SANDBOX=false

# n8n Configuration
N8N_WEBHOOK_URL=your-n8n-webhook-url
DATA_PROVIDER_AUTH_TOKEN=generate-a-secure-auth-token

# Application Configuration
PORT=8000
PYTHONPATH=/app
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Trading Configuration
PAPER_TRADING_ENABLED=true
AUTONOMOUS_TRADING_ENABLED=true
INITIAL_CAPITAL=100000
MAX_POSITIONS_PER_USER=5
POSITION_SIZE_LIMIT=20000
DAILY_LOSS_LIMIT=5000
MAX_ORDERS_PER_ACCOUNT=7 